<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SistemaMedico.Views"
             x:Class="SistemaMedico.Views.CadastroPacientePage">

	<StackLayout Padding="10">
		<Label Text="Nome" />
		<Entry x:Name="NomeEntry" Placeholder="Nome do paciente" />

		<Label Text="Idade" />
		<Entry x:Name="IdadeEntry" Placeholder="Idade do paciente" Keyboard="Numeric" />

		<Label Text="Diagnóstico" />
		<Entry x:Name="DiagnosticoEntry" Placeholder="Diagnóstico do paciente" />

		<Button Text="Salvar" Clicked="OnSalvarClicked" />
	</StackLayout>
</ContentPage>
